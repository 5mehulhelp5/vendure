{
  "extends": ["../../tsconfig.json"],
  "compilerOptions": {
    "lib": ["dom"],
    "types": ["node"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "gql.tada/ts-plugin",
        "schema": "http://localhost:3000/admin-api",
        "tadaOutputLocation": "./src/graphql/graphql-env.d.ts"
      }
    ]
  },
  "exclude": ["./lib"]
}
